{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mobile/src",
  "projectType": "application",
  "targets": {
    "start": {
      "executor": "@nrwl/react-native:start",
      "options": {
        "port": 8081
      }
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "nx start mobile"
      }
    },
    "run-ios": {
      "dependsOn": ["react-native-asset"],
      "executor": "@nrwl/react-native:run-ios",
      "options": {}
    },
    "bundle-ios": {
      "dependsOn": ["react-native-asset"],
      "executor": "@nrwl/react-native:bundle",
      "outputs": ["apps/mobile/build"],
      "options": {
        "entryFile": "src/main.tsx",
        "platform": "ios",
        "bundleOutput": "dist/apps/mobile/ios/main.jsbundle"
      }
    },
    "run-android": {
      "dependsOn": ["react-native-asset"],
      "executor": "@nrwl/react-native:run-android",
      "options": {}
    },
    "build-android": {
      "dependsOn": ["react-native-asset"],
      "executor": "@nrwl/react-native:build-android",
      "outputs": [
        "apps/mobile/android/app/build/outputs/bundle",
        "apps/mobile/android/app/build/outputs/apk"
      ],
      "options": {}
    },
    "bundle-android": {
      "dependsOn": ["react-native-asset"],
      "executor": "@nrwl/react-native:bundle",
      "options": {
        "entryFile": "src/main.tsx",
        "platform": "android",
        "bundleOutput": "dist/apps/mobile/android/main.jsbundle"
      }
    },
    "sync-deps": {
      "executor": "@nrwl/react-native:sync-deps",
      "options": {}
    },
    "ensure-symlink": {
      "executor": "@nrwl/react-native:ensure-symlink",
      "options": {}
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/mobile/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/mobile"],
      "options": {
        "jestConfig": "apps/mobile/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "react-native-asset": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "react-native-asset",
        "cwd": "apps/mobile"
      }
    },
    "tsc": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "tsc -b apps/mobile/tsconfig.app.json"
      }
    }
  },
  "tags": []
}
